<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/cardBack"
    app:layout_constraintCircleRadius="30dp"
    android:paddingTop="5dp"
    android:fontFamily="serif-monospace">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_details"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:textColor="@color/popUpText"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="@string/name_hint"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:textColorHint="@color/popUpText"
        android:textColor="@color/popUpText"
        android:background="@color/white"
        android:autofillHints=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/class_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="@string/class_hint"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/popUpText"
        android:textStyle="italic"
        android:textColor="@color/popUpText"
        android:background="@color/white"
        android:autofillHints=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/enter_address_hint"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/popUpText"
        android:textStyle="italic"
        android:textColor="@color/popUpText"
        android:background="@color/white"
        android:autofillHints=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="@string/contact_hint"
        android:textSize="20sp"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/popUpText"
        android:textStyle="italic"
        android:textColor="@color/popUpText"
        android:background="@color/white"
        android:autofillHints="" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_student"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textStyle="italic"
        android:background="@color/purple_A400"/>


</LinearLayout>
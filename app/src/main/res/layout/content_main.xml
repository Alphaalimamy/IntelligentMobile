<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:text="@string/droid_cafe"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/donut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/donut_circle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:onClick="donutOrder"
            android:contentDescription="@string/this_is_donut_image" />

        <TextView
            android:id="@+id/donut_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/glaced_are_glaced_sprinkled_with_candy"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/donut"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/donut" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ice_cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icecream_circle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:onClick="iceCreamOrder"
            android:contentDescription="@string/ice_cream_description" />

        <TextView
            android:id="@+id/ice_cream_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ice_cream_sandwiches_have_chocolate_wafers_and_vanilla_filling"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/ice_cream"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/ice_cream" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/froyo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/froyo_circle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:onClick="froyoOrder"
            android:contentDescription="@string/this_is_froyo" />

        <TextView
            android:id="@+id/froyo_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/froyo_is_premium"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/froyo"
            android:textSize="18sp"
            android:layout_toEndOf="@+id/froyo" />
    </RelativeLayout>
</LinearLayout>